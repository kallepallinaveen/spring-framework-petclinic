pipeline{
    agent any
    stages{
        stage("build code"){
            steps{
                sh "mvn clean install"
            }
        }
        stage("test code"){
            steps{
                sh "mvn test"

            }
        }
        stage("deploy app"){
            steps{
                sshagent(['deployuser']) {
                sh "ssh -o StrictHostKeyChecking=no ./target/petclinic.war ubuntu@172.18.102.114:/opt/tomcat/webapps"
                }
            }
        }
    }
}
